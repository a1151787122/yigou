/* pages/user/user.wxss */
.container {
  height: 84.5vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  background-color: var(--themeColor);
}
.container .userinfo .login {
  background-color: #7bed9f;
  text-shadow: 2px 2px 5px #FFBD27;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 200rpx;
  font-size: 52rpx;
  font-weight: 600;
  color: #747d8c;
}
.container .userinfo .page .userBaseInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .userinfo .page .userBaseInfo image {
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.container .userinfo .page .userBaseInfo text {
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
}
.container .userinfo .userApp {
  border-bottom-color: #636e72;
  border-block-style: dotted;
  border-top: none;
  width: 100vw;
  display: flex;
  margin: 30rpx;
}
.container .userinfo .userApp navigator {
  width: 100%;
  padding: 40rpx;
  flex: 1;
  align-items: center;
}
.container .userinfo .userApp navigator .userAppIner {
  display: flex;
  flex-direction: column;
  width: 85%;
}
.container .userinfo .userApp navigator .userAppIner image {
  width: 100%;
}
.container .userinfo .userApp navigator .userAppIner text {
  text-align: center;
  width: 100%;
  font-size: 25rpx;
  font-weight: 600;
  color: #636e72;
}
.container .userinfo .userApp2 {
  display: flex;
  width: 100vw;
}
.container .userinfo .userApp2 image {
  width: 25vw;
  height: 25vw;
}
